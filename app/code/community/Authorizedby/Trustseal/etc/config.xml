<?xml version="1.0"?>
<config>
    <modules>
        <Authorizedby_Trustseal>
            <version>1.1.0</version>
        </Authorizedby_Trustseal>
    </modules>
    <global>
        <models>
            <trustseal>
                <class>Authorizedby_Trustseal_Model</class>
            </trustseal>
        </models>
        <blocks>
            <trustseal>
                <class>Authorizedby_Trustseal_Block</class>
            </trustseal>
        </blocks>
        <helpers>
            <trustseal>
                <class>Authorizedby_Trustseal_Helper</class>
            </trustseal>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <authorizedby_trustseal>
                    <file>authorizedby/trustseal.xml</file>
                </authorizedby_trustseal>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <trustseal>
                                            <title>authorized.by</title>
                                        </trustseal>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <Authorizedby_Trustseal>
                    <files>
                        <default>Authorizedby_Trustseal.csv</default>
                    </files>
                </Authorizedby_Trustseal>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <trustseal>
            <config>
                <activate>1</activate>
                <language>de</language>
                <standard_badge>1</standard_badge>
                <position>right-two-thirds</position>
                <position_alignment>positionBottom</position_alignment>
                <position_unit>%</position_unit>
                <position_margin>50</position_margin>
                <product_verifictation_attribute>sku</product_verifictation_attribute>
                <island>1</island>
                <island_position>catalog_product_view,footer</island_position>
                <island_product_type>embedded-original-oval</island_product_type>
                <island_footer_type>embedded-partner</island_footer_type>
                <z_index>100</z_index>
                <mobile>1</mobile>
            </config>
        </trustseal>
    </default>
</config>
